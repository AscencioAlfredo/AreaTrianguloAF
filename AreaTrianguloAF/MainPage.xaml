<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AreaTrianguloAF"           
             x:Class="AreaTrianguloAF.MainPage">



    <StackLayout Padding="20">
        <Label Text="!AREA DE UN TRIANGULO!" HorizontalTextAlignment="Center" TextColor="White"></Label> 
        <Entry x:Name="LadoAEntry" Placeholder="Lado A"/>
        <Entry x:Name="LadoBEntry" Placeholder="Lado B"/>
        <Entry x:Name="LadoCEntry" Placeholder="Lado C"/>
        <Button Text="Calcular Área" Clicked="CalcularButton_Clicked"/>
        <Label x:Name="ResultadoLabel" FontSize="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
    
</ContentPage>



